<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextInputLayout.FilledBox.Padding" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColorHint">@color/light_blue</item>
        <item name="hintEnabled">true</item>
        <item name="boxStrokeColor">@color/light_blue</item>
    </style>

    <style name="TextInputLayout_Error" parent="TextAppearance.Design.Error">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="fontFamily">@font/dm_sans_regular</item>
        <item name="android:textColor">@color/red_DC2828</item>
    </style>

    <style name="TextInputLayout_Hint" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="fontFamily">@font/dm_sans_regular</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">22%</item>
    </style>

    <style name="Login_TextInputEditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="fontFamily">@font/dm_sans_regular</item>
        <item name="android:drawablePadding">@dimen/_3sdp</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:lines">1</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="Login_MaterialTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="fontFamily">@font/dm_sans_regular</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="MaterialButtonStyle">
        <item name="fontFamily">@font/dm_sans_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="backgroundTint">@color/light_gray</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:paddingTop">@dimen/_9sdp</item>
        <item name="android:paddingBottom">@dimen/_9sdp</item>
        <item name="cornerRadius">@dimen/_5sdp</item>
        <item name="android:alpha">0.65</item>
    </style>

    <style name="recycler_view_scrolling_style">
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">true</item>
        <!--<item name="android:scrollbarDefaultDelayBeforeFade">500</item>
        <item name="android:scrollbarFadeDuration">800</item>-->
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_thumb_layout</item>
        <!--<item name="android:scrollbarTrackVertical">@drawable/scrollbar_track_layout</item>-->
        <item name="android:fastScrollEnabled">true</item>
    </style>
</resources>